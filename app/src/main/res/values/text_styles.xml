<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.Medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="TextAppearance.Medium.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Medium.16.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Medium.16.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.ExtraBold">
        <item name="android:fontFamily">@font/manrope_extrabold</item>
    </style>

    <style name="TextAppearance.ExtraBold.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.ExtraBold.16.White">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>